string = open("text.txt", "r")
ss = string.readline().upper()
sss = ""
ssss = {}
char = 0
print (ss)
for i in ss:
	char += 1
	sss = ss.split()
	for i in sss:
		c = sss.count(i)
		ssss.update({i: c})
print (len(sss), max(ssss), char)
string.close()
